<% provide(:title, 'Sign in') %>


<div class="container-fluid">
  <div class="contentful">

<h2>Sign up</h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.check_box :admin %></div>

  <div><%= f.label :firstname, "First Name", class: "formarion" %><br>
  <%= f.text_field :firstname, autofocus: true, class: "boxy" %></div>


  <div><%= f.label :lastname, "Last Name", class: "formarion" %><br>
  <%= f.text_field :lastname, class: "boxy" %></div>

  <div><%= f.label :email, class: "formarion" %><br>
  <%= f.email_field :email, class: "boxy" %></div>


   <div><%= f.label :yearofbirth, "Year of Birth", class: "formarion" %><br>
  <%= f.text_field :yearofbirth, class: "boxy" %></div>

   <div><%= f.label :city, "City", class: "formarion" %><br>
  <%= f.text_field :city, class: "boxy" %></div>

  <div><%= f.label :password, class: "formarion" %><br>
    <%= f.password_field :password, autocomplete: "off", class: "boxy" %></div>

  <div><%= f.label :password_confirmation, class: "formarion" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "boxy" %></div><br>

  <div><%= f.submit "Sign up", class: "btn btn-default btn-info" %></div>
<% end %>

<%= render "devise/shared/links" %>

</body>

</div>
</div>

