<% provide(:title, 'Sign in') %>


<div class="container-fluid">
	<div class="contentful">

<h2>Login</h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="formario"><%= f.label :email, class: "formarion" %><br />
  <%= f.email_field :email, autofocus: true, class: "boxy" %></div>

  <div class="formario"><%= f.label :password, class: "formarion" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "boxy"  %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "formarion"%></div>
  <% end -%>
  <br>

  <div><%= f.submit "Sign in", class: "btn btn-default btn-info" %></div>
<% end %>

<!--<%= render "devise/shared/links" %>-->

</div>
</div>
